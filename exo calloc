#include <stdio.h>
#include <stdlib.h>

int main()
{
 int n;
 float s,m;
 float* T;

//reading number of values
printf("Donnez le nombre des valeurs n>0: ");
scanf("%d",&n);

//allocation avec calloc
T=(float*)calloc(n,sizeof(float));

if(T==NULL){
    printf("allocation failed.\n");
}else{
    printf("allocation successful.\n");

    //reading T values and sum of T values
    s=0;
    for(int i=0; i<n; i++){
        printf("T[%d]= ",i+1);
        scanf("%f",&T[i]);
        printf("\n");
        s=s+T[i];
    }

    //writing T values and after sum
    for(int i=0; i<n; i++){
        printf("%.2f \n",T[i]);
    }
    printf("sum of these values is %.2f \n",s);

    //Mean of values
    m=0;
    if(n>0){
        m=s/(float)n;
        printf("mean of these values is %.2f \n",m);
    }

    free(T);
    
}

}
